    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: external terminal",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal",
            "cwd": "${fileDirname}",
            "justMyCode": true
        },
        {
            "name": "Python: integrated terminal",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${fileDirname}",
            "purpose": ["debug-in-terminal"],
            "justMyCode": true
        },
        {
            "name": "JavaScript",
            "type": "pwa-node",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
        }
    ]
}